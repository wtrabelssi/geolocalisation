package com.example.demo.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.ModelAttribute;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;

import com.example.demo.model.Reclamations;
import com.example.demo.repo.ReclamationsRepository;

@Controller
public class DataController {
	@Autowired
	private ReclamationsRepository reclamationsRepository;
	  
	@RequestMapping("/")
	public String indexPage(Model model) {
		model.addAttribute("reclamation", new Reclamations(0,0, "", null, 0));
		return"index";
	}
	@PostMapping("/reclamations")
	public String reclamationPage(Model model) {
		return "reclamations";
	}
	
}
